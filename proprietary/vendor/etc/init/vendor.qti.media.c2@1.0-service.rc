service vendor-qti-media-c2-hal-1-0 /vendor/bin/hw/vendor.qti.media.c2@1.0-service
    class hal
    user mediacodec
    group mediadrm camera drmrpc system
    capabilities SYS_NICE
    ioprio rt 4
    writepid /dev/cpuset/foreground/tasks

on property:init.svc.vendor.qti.hardware.display.allocator=restarting
    restart vendor-qti-media-c2-hal-1-0